= form_for @retailer do |f|
  - if @retailer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@retailer.errors.count, "error")} prohibited this retailer from being saved:"
      %ul
        - @retailer.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
